doctype html
html
    head
        meta(charset='utf-8')
        title 登录
        link(rel='stylesheet', href='stylesheets/style.css')
        link(rel='stylesheet', href='stylesheets/signin.css')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.js ', charset='utf-8')
        script(src='javascripts/signinClient.js', charset='utf-8')
    body
        img#homeimg(src='images/sw_wind.png')
        p.welcome Welcome to SW Blog
        h1
            | Log in with your SW Name
        p.error #{error}
        form(action='http://localhost:8000/signin', method='post')
            lable(for='username')
            input#username(type='text', name='userName', placeholder='Username')
            br
            lable(for='passwd')
            input#passwd(type='password', name='passwd', placeholder='Password')
            br
            input#submit(type='submit', value='Log in')
            br
        #buttons
            a(href='/forget')
                button#forget 忘记密码？
            | |
            a(href='/regist')
                button#regist 注册
